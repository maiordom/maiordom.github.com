BODY, HTML
    width 100%
    height 100%

BODY
    background #eee
    font-family 'Crimson Text', Times, 'Times New Roman', serif
    color #222

@font-face
    font-family 'LeagueGothicRegular'
    src url('/assets/css/font/League_Gothic-webfont.eot')
    src url('/assets/css/font/League_Gothic-webfont.eot?#iefix') format('embedded-opentype'),
         url('/assets/css/font/League_Gothic-webfont.woff') format('woff'),
         url('/assets/css/font/League_Gothic-webfont.ttf') format('truetype'),
         url('/assets/css/font/League_Gothic-webfont.svg#LeagueGothicRegular') format('svg')
    font-weight normal
    font-style normal

.maiordom
    display none
    position relative
    top 55px
    width 510px
    height 75px
    float left
    margin-left 100px

.head
    position relative
    height 185px
    overflow hidden
    transform-style preserve-3d
    transform translate3d(0, 0, 0)
    transition 1s height
    width 750px
    margin 0 auto

.pixel
    position absolute
    width 15px
    height 15px
    background #555
    transform translate3d(0, 0, 0)

.letter
    position absolute
